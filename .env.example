#############################################
# Database Config (MySQL)
#############################################

# Root password for MySQL (used internally by the MySQL container)
MYSQL_ROOT_PASSWORD=your_root_password_here

# Application database name
MYSQL_DATABASE=ecommerce_db

# Application-specific DB user (not root)
MYSQL_USER=your_db_user_here
MYSQL_PASSWORD=your_db_password_here

# Spring Boot Database Configuration
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/ecommerce_db?createDatabaseIfNotExist=true
SPRING_DATASOURCE_DRIVER_CLASS_NAME=com.mysql.cj.jdbc.Driver
SPRING_DATASOURCE_USERNAME=${MYSQL_USER}
SPRING_DATASOURCE_PASSWORD=${MYSQL_PASSWORD}
SPRING_JPA_PROPERTIES_HIBERNATE_DIALECT=org.hibernate.dialect.MySQL8Dialect
SPRING_JPA_HIBERNATE_DDL_AUTO=update


#############################################
# Mail Configuration (Gmail SMTP Example)
#############################################

# SMTP server host
SPRING_MAIL_HOST=smtp.gmail.com

# Your email address (for sending notifications)
SPRING_MAIL_USERNAME=your_email@gmail.com

# Gmail App Password (NOT your normal Gmail password)
SPRING_MAIL_PASSWORD=your_app_password_here

# Mail security settings
SPRING_MAIL_PROPERTIES_MAIL_SMTP_AUTH=true
SPRING_MAIL_PROPERTIES_MAIL_SMTP_STARTTLS_ENABLE=true


#############################################
# File Upload Configuration
#############################################

# Maximum file size allowed for uploads
SPRING_SERVLET_MULTIPART_MAX_FILE_SIZE=50MB

# Maximum request size allowed (sum of all files in a request)
SPRING_SERVLET_MULTIPART_MAX_REQUEST_SIZE=50MB


